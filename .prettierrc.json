{
	"trailingComma": "none",
	"tabWidth": 4,
	"semi": true,
	"singleQuote": false,
	"printWidth": 100,
	"useTabs": true,
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"bracketSpacing": true,
	"svelteAllowShorthand": false,
	"svelteSortOrder": "options-scripts-markup-styles",
	"plugins": ["prettier-plugin-organize-imports", "prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
